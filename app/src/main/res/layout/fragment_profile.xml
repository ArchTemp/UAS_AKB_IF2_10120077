<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".view.profile.ProfileFragment">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto"
            android:layout_width="297dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="302dp"
            android:layout_height="40dp"
            android:layout_below="@id/foto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Nama : Mohammad Noor Ihsan Akbar"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nim"
            android:layout_width="302dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt_nama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="NIM : 10120077"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_kelas"
            android:layout_width="302dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt_nim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Kelas : IF-2"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="302dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt_kelas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Email : archtempid@gmail.com"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:text="Sign out" />


</LinearLayout>